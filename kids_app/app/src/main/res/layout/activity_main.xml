<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_yellow"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_to_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:fontFamily="@font/fontstyle"
            android:text="마이페이지"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/introduction_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/introduction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어서오세요"
                android:fontFamily="@font/fontstyle"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="강세희"
                    android:fontFamily="@font/fontstyle"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/introduction1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구"
                    android:fontFamily="@font/fontstyle"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/enter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="이용 시간"
                    android:fontFamily="@font/fontstyle"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/enter_time_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/fontstyle"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/enter_time_hour1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="시간"
                    android:fontFamily="@font/fontstyle"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/enter_time_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="50"
                    android:fontFamily="@font/fontstyle"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/enter_time_minute1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분"
                    android:fontFamily="@font/fontstyle"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/yellow_theme"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@id/introduction_layout"></View>


        <LinearLayout
            android:id="@+id/menu_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintBottom_toTopOf="@id/line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/use_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/mainfont"
                android:text="이용내역"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/search_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/mainfont"
                android:text="교구검색"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/call_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mainfont"
                android:text="선생님콜"
                android:textColor="@color/black"></TextView>

        </LinearLayout>


        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/yellow_theme"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@id/menu_list"></View>


        <TextView
            android:id="@+id/todays_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainfont"
            android:text="오늘의 교구"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2">

        </TextView>

        <ImageView
            android:id="@+id/recommendation_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/todays_art"
            android:src="@drawable/recommendation"
            android:contentDescription="Recommendation of the art" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/recommendation_art"
            app:layout_constraintTop_toTopOf="@+id/recommendation_art"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommendation_art_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fontstylebold"
                android:text="트램펄린"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/recommendation_art2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recommendation_art"
            android:src="@drawable/recommendation2"
            android:contentDescription="Recommendation of the art" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/recommendation_art2"
            app:layout_constraintTop_toTopOf="@+id/recommendation_art2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommendation_art_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fontstylebold"
                android:text="나무블럭"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/recommendation_art3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recommendation_art2"
            android:src="@drawable/recommendation3"
            android:contentDescription="Recommendation of the art" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/recommendation_art3"
            app:layout_constraintTop_toTopOf="@+id/recommendation_art3"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/recommendation_art_title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fontstylebold"
                android:text="레고"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/recommendation_art4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recommendation_art3"
            android:src="@drawable/recommendation4"
            android:contentDescription="Recommendation of the art" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/recommendation_art4"
            app:layout_constraintTop_toTopOf="@+id/recommendation_art4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommendation_art_title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fontstylebold"
                android:text="슬라임"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>